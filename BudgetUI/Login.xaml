<Window x:Class="BudgetUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetUI"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TextBox_login" Margin="208,83,207,290" ></TextBox>
        <PasswordBox x:Name="PasswordBox_password" Margin="208,156,208,217"></PasswordBox>
        <Button x:Name="Button_sign_in" Margin="282,236,281,131" FontSize="30" FontWeight="Bold" Background="LightGreen" Click="Button_sign_in_Click">Sign in</Button>
        <Button x:Name="Button_sign_up" Margin="208,320,400,58" FontSize="25" FontWeight="Bold" Background="LightPink" Click="Button_sign_up_Click">Sign up</Button>
        <Button x:Name="Button_forgot_password" Margin="427,320,207,58" FontSize="18" Background="White">Forgot password</Button>




    </Grid>
</Window>
