<Window x:Class="BudgetUI.Forgot_password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetUI"
        mc:Ignorable="d"
        Title="Forgot_password" Height="500" Width="600">
    <Grid>
        <TextBlock x:Name="TextBlock_question" Margin="35,198,10,228" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="left"></TextBlock>
        <TextBox x:Name="TextBox_login" Margin="34,55,10,315" FontSize="50" TextChanged="TextBox_login_TextChanged" GotFocus="TextBox_login_GotFocus">Name</TextBox>
        <TextBlock FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,261,0,0">Answer:</TextBlock>
        <Button x:Name="Button_login_back" Margin="411,375,10,22" Click="Button_login_back_Click" FontSize="30" Background="LightPink">Main Menu</Button>
        <Button x:Name="Button_show_question" Margin="411,281,10,109" Click="Button_show_question_Click" Content="Enter" FontSize="30" Background="LightGreen"/>
        <Button x:Name="Button_show_password" Margin="118,58,316,330" Click="Button_show_password_click" Content="Enter" FontSize="30" Background="LightGreen"/>
        <TextBox x:Name="Textbox_answer" Margin="35,316,223,25" FontSize="50"/>
    </Grid>
</Window>
