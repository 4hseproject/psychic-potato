<Window x:Class="BudgetUI.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetUI"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TextBox_name" GotFocus="TextBox_name_GotFocus" Margin="29,0,371,313" FontSize="37" VerticalAlignment="Bottom">Name</TextBox>
        <TextBox x:Name="TextBox_budget" GotFocus="TextBox_budget_GotFocus" Margin="496,0,45,313" FontSize="37" VerticalAlignment="Bottom">Budget</TextBox>
        <PasswordBox x:Name="PasswordBox_password" Margin="29,0,371,220" FontSize="37" VerticalAlignment="Bottom"></PasswordBox>
        <ComboBox x:Name="Combobox_questions" Margin="29,245,371,109" FontSize="30"></ComboBox>
        <TextBlock Margin="0,-17,0,0" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold">Registration</TextBlock>
        <TextBox x:Name="TextBox_Answer" GotFocus="TextBox_Answer_GotFocus" Margin="29,0,371,27" FontSize="37" VerticalAlignment="Bottom">Answer</TextBox>
        <Button x:Name="Button_back" Margin="496,260,28,96" FontSize="30" FontWeight="Bold" Background="LightPink" Click="Button_back_Click">Back</Button>
        <Button x:Name="Button_Enter" Margin="496,335,28,27" FontSize="30" FontWeight="Bold" Background="LightGreen" Click="Button_Enter_Click" RenderTransformOrigin="0.513,0.688">OK</Button>
        <TextBlock Margin="32,96,0,0" FontSize="37" HorizontalAlignment="Left" VerticalAlignment="Top">Password:</TextBlock>
        <TextBlock FontSize="37" Margin="29,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="281">Secret question</TextBlock>
    </Grid>
</Window>
