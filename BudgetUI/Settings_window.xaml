<Window x:Class="BudgetUI.Settings_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetUI"
        mc:Ignorable="d"
        Title="Settings_window" Height="450" Width="600">
    <Grid>
        <Button Margin="338,330,10,10" FontSize="40" FontWeight="Bold" Background="LightPink" Click="Button_MainMenu_Click">Main Menu</Button>
        <Button x:Name="Button_ok" Margin="70,330,278,10" FontSize="37" FontWeight="Bold" Background="LightGreen" Click="Button_ok_Click">OK</Button>
        <TextBox x:Name="TextBox_Name" FontSize="37" VerticalAlignment="Top" Margin="10,77,278,0" GotFocus="TextBox_Name_GotFocus">Name</TextBox>
        <TextBox x:Name="TextBox_Budget" FontSize="37" VerticalAlignment="Top" Margin="10,162,278,0" GotFocus="TextBox_Budget_GotFocus">Budget</TextBox>
        <Button Margin="10,236,278,122" FontSize="37" FontWeight="Bold" Background="LightYellow" Click="Button_Click">Change password</Button>
        <TextBlock Margin="0,10,0,365" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center">Settings</TextBlock>
        
    </Grid>
</Window>
