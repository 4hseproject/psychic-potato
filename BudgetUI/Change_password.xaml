<Window x:Class="BudgetUI.Change_password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetUI"
        mc:Ignorable="d"
        Title="Change_password" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TextBox_oldpassword" GotFocus="TextBox_oldpassword_GotFocus" Margin="28,63,215,305" FontSize="40" VerticalAlignment="Bottom">Old password</TextBox>
        <TextBox x:Name="TextBox_newpassword" GotFocus="TextBox_newpassword_GotFocus" Margin="28,185,215,185" FontSize="40" VerticalAlignment="Bottom">New password</TextBox>
        <TextBox x:Name="TextBox_repeatpassword" GotFocus="TextBox_repeatpassword_GotFocus" Margin="28,304,215,66" FontSize="40" VerticalAlignment="Bottom">Repeat password</TextBox>
        <Button x:Name="Button_ok" Margin="605,313,10,66" FontSize="30" FontWeight="Bold" Background="LightGreen" Click="Button_ok_Click">OK</Button>
        <Button x:Name="Button_main_menu" Margin="605,74,10,306" FontSize="30" FontWeight="Bold" Background="LightPink" Click="Button_main_menu_Click">Main Menu</Button>
    </Grid>
</Window>
